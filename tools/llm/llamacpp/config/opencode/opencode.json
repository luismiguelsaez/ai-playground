{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "bash": "allow",
    "read": "allow",
    "glob": "allow",
    "doom_loop": "allow"
  },
  "lsp": {
    "pyright": {
      "disabled": true
    }
  },
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "websearch": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mzxrai/mcp-webresearch@latest"
      ],
      "enabled": false
    },
    "kubernetes": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "enabled": false
    }
  },
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-server (local)",
      "options": {
        "baseURL": "http://127.0.0.1:8002"
      }, 
      "models": {
        "coding-agent": {
          "name": "coding-agent",
          "reasoning": "true",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        }
      }
    }
  }
}
