{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "lsp": {
    "pyright": {
      "disabled": true
    }
  },
  "mcp": {
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "websearch": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mzxrai/mcp-webresearch@latest"
      ],
      "enabled": false
    },
    "kubernetes": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "enabled": false
    }
  },
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-server (local)",
      "options": {
        "baseURL": "http://ai-server.local:8002"
      }, 
      "models": {
        "coding-agent": {
          "name": "coding-agent",
          "reasoning": true,
          "limit": {
            "context": 131072,
            "output": 65536
          }
        }
      }
    },
    "vllm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "vLLM (local)",
      "options": {
        "baseURL": "http://ai-server.local:8000/v1"
      },
      "models": {
        "model": {
          "name": "model",
          "limit": {
            "context": 131072,
            "output": 65536
          }
        }
      }
    }
  }
}